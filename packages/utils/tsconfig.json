{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Projects */
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* Modules */
    "baseUrl": "./",
    "moduleResolution": "node", // Nodenext does not resolve some types

    /* Emit */
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",

    /* Type Checking */
    "exactOptionalPropertyTypes": false // Issue with Rollup...
  }
}
